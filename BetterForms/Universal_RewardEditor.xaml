<Window x:Class="BowieD.Unturned.NPCMaker.BetterForms.Universal_RewardEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BowieD.Unturned.NPCMaker.BetterForms"
        mc:Ignorable="d"
        Title="{DynamicResource rewardEditor_Title}" 
        Height="450" 
        Width="300"
        ResizeMode="NoResize"
        Icon="{DynamicResource app_Icon}">
    <Grid>
        <Grid.LayoutTransform>
            <ScaleTransform x:Name="gridScale"/>
        </Grid.LayoutTransform>
        <ComboBox SelectionChanged="TypeBox_SelectionChanged" x:Name="typeBox" Height="24" VerticalAlignment="Top" Margin="10,41,10,0"/>
        <Label Content="{DynamicResource rewardEditor_Type}" HorizontalContentAlignment="Center" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <GroupBox Header="{DynamicResource rewardEditor_Variables}" Margin="10,70,10,47">
            <UniformGrid Name="variablesGrid" Columns="2"/>
        </GroupBox>
        <Button Click="SaveButton_Click" x:Name="saveButton" Height="32" Margin="10,0,10,10" VerticalAlignment="Bottom" Content="{DynamicResource rewardEditor_Save}"/>
    </Grid>
</Window>
