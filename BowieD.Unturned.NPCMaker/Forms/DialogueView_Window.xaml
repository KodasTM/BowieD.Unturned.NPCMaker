<Window x:Class="BowieD.Unturned.NPCMaker.Forms.DialogueView_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BowieD.Unturned.NPCMaker.Forms" xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="DialogueView_Window" Height="450" Width="800">
    <StackPanel>
        <Border Margin="5" BorderBrush="Black" BorderThickness="1" CornerRadius="4">
            <StackPanel>
                <Label Margin="5">
                    <TextBlock Name="npcNameText" TextWrapping="NoWrap" FontSize="14"/>
                </Label>
                <Label Margin="5" PreviewMouseDown="Label_PreviewMouseDown">
                    <TextBlock Name="mainText" TextWrapping="Wrap" MaxHeight="64" Height="64" MinHeight="64"/>
                </Label>
            </StackPanel>
        </Border>
        <StackPanel Margin="5" Name="responsesPanel">
        </StackPanel>
    </StackPanel>
</Window>
