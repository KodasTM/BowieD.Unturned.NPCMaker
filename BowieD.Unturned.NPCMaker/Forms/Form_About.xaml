<Window x:Class="BowieD.Unturned.NPCMaker.Forms.Form_About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BowieD.Unturned.NPCMaker.Forms"
        mc:Ignorable="d"
        Title="{DynamicResource INTERFACE_App_About_Title}" Height="200" Width="200" ResizeMode="NoResize" Icon="{DynamicResource app_Icon}">
    <Grid>
        <Grid.LayoutTransform>
            <ScaleTransform x:Name="gridScale"/>
        </Grid.LayoutTransform>
        <Image VerticalAlignment="Center" Source="/Resources/BowieD_1000x.png" Height="128" StretchDirection="DownOnly" Margin="10,-46,10,89"/>
        <Label Margin="0,34,0,0" HorizontalAlignment="Center">
            <TextBlock Name="mainText" TextWrapping="Wrap" TextAlignment="Center" />
        </Label>
    </Grid>
</Window>
