<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BowieD.Unturned.NPCMaker.Forms"
        xmlns:NPCMaker="clr-namespace:BowieD.Unturned.NPCMaker" x:Class="BowieD.Unturned.NPCMaker.Forms.Universal_ConditionEditor"
        mc:Ignorable="d"
        Title="{DynamicResource conditionEditor_Title}"
        Height="240" 
        Width="300"
        Icon="{DynamicResource app_Icon}">
    <Grid>
        <Grid.LayoutTransform>
            <ScaleTransform x:Name="gridScale"/>
        </Grid.LayoutTransform>
        <ComboBox SelectionChanged="TypeBox_SelectionChanged" x:Name="typeBox" VerticalAlignment="Top" Height="24" Margin="10,41,10,0"/>
        <GroupBox Header="{DynamicResource conditionEditor_Variables}" Margin="10,70,10,47">
            <ScrollViewer>
                <StackPanel x:Name="variablesGrid"/>
            </ScrollViewer>
        </GroupBox>
        <Label HorizontalContentAlignment="Center" Content="{DynamicResource conditionEditor_ConditionType}" Margin="10,10,10,0" VerticalAlignment="Top"/>
        <Button x:Name="saveButton" Click="Button_Click" Height="32" Margin="10,0,10,10" VerticalAlignment="Bottom" Content="{DynamicResource conditionEditor_Save}"/>
    </Grid>
</Window>
