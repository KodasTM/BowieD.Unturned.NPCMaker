<Window x:Class="BowieD.Unturned.NPCMaker.Forms.Universal_VendorItemEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BowieD.Unturned.NPCMaker.Forms"
        xmlns:npc="clr-namespace:BowieD.Unturned.NPCMaker.NPC"
        xmlns:bettercontrols="clr-namespace:BowieD.Unturned.NPCMaker.BetterControls"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="{DynamicResource vendorEditor_Title}" ResizeMode="NoResize" Height="334" Width="300" Icon="{DynamicResource app_Icon}">
    <Grid>
        <Grid.LayoutTransform>
            <ScaleTransform x:Name="gridScale"/>
        </Grid.LayoutTransform>
        <Label Height="28" Margin="10,10" VerticalAlignment="Top" HorizontalContentAlignment="Center" Content="{DynamicResource vendor_Type}"/>
        <ComboBox Name="typeBox" SelectionChanged="TypeBox_SelectionChanged" Height="28" VerticalAlignment="Top" Margin="10,43,10,0">
            <ComboBoxItem Content="{DynamicResource vendor_Type_ITEM}">
                <ComboBoxItem.Tag>
                    <npc:ItemType>Item</npc:ItemType>
                </ComboBoxItem.Tag>
            </ComboBoxItem>
            <ComboBoxItem Content="{DynamicResource vendor_Type_VEHICLE}">
                <ComboBoxItem.Tag>
                    <npc:ItemType>Vehicle</npc:ItemType>
                </ComboBoxItem.Tag>
            </ComboBoxItem>
        </ComboBox>
        <Label Height="28" Margin="10,76,10,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" Content="{DynamicResource vendor_SellType}"/>
        <ComboBox Name="sellBox" Height="28" VerticalAlignment="Top" Margin="10,109,10,0">
            <ComboBoxItem Content="{DynamicResource vendor_SellType_Buy}" Tag="BUY" />
            <ComboBoxItem Content="{DynamicResource vendor_SellType_Sell}" Tag="SELL"/>
        </ComboBox>
        <Button Click="EditConditions_Click" Height="28" Content="{DynamicResource vendorEditor_Edit_Conditions}" Margin="10,142,10,0" VerticalAlignment="Top"/>
        <mah:NumericUpDown ParsingNumberStyle="Integer" HorizontalContentAlignment="Left" HideUpDownButtons="True" Maximum="65535" NumericInputMode="Decimal" InterceptMouseWheel="False" InterceptArrowKeys="False" x:Name="txtBoxID" HorizontalAlignment="Right" Height="23" Margin="0,175,10,0" VerticalAlignment="Top" Width="100"/>
        <mah:NumericUpDown ParsingNumberStyle="Integer" HorizontalContentAlignment="Left" HideUpDownButtons="True" Maximum="4294967295" NumericInputMode="Decimal" InterceptMouseWheel="False" InterceptArrowKeys="False" x:Name="txtBoxCost" HorizontalAlignment="Right" Height="23" Margin="0,206,10,0" VerticalAlignment="Top" Width="100"/>
        <mah:NumericUpDown x:Name="amountBox" ParsingNumberStyle="Integer" HorizontalContentAlignment="Left" HideUpDownButtons="True" Maximum="255" Minimum="0" NumericInputMode="Decimal" InterceptMouseWheel="False" InterceptArrowKeys="False" HorizontalAlignment="Right" Height="23" Margin="0,237,10,0" VerticalAlignment="Top" Width="100"/>
        <TextBox MaxLength="5" Name="txtBoxSpawnpoint" HorizontalAlignment="Right" Height="23" Margin="0,237,10,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="100"/>
        <Label Name="labelSpawnpoint" Content="{DynamicResource vendor_Item_Spawnpoint}" HorizontalAlignment="Left" Margin="10,237,0,0" VerticalAlignment="Top" Width="169"/>
        <Button Click="SaveButton_Click" Content="{DynamicResource vendorEditor_Save}" Margin="10,0,10,10" Height="26" VerticalAlignment="Bottom"/>
        <Label Content="{DynamicResource vendor_Item_ID}" HorizontalAlignment="Left" Margin="10,175,0,0" VerticalAlignment="Top" Width="169"/>
        <Label Content="{DynamicResource vendor_Item_Cost}" HorizontalAlignment="Left" Margin="10,206,0,0" VerticalAlignment="Top" Width="169"/>
        <Label x:Name="amountLabel" Content="{DynamicResource vendor_Item_Amount}" HorizontalAlignment="Left" Margin="10,237,0,0" VerticalAlignment="Top" Width="169"/>

    </Grid>
</Window>
