<UserControl x:Class="BowieD.Unturned.NPCMaker.Controls.Dialogue_Message_Page"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BowieD.Unturned.NPCMaker.Controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" MinHeight="64">
    <Grid>
        <TextBox TextChanged="TextField_TextChanged" TextWrapping="Wrap" Name="textField" Margin="5,5">
            
        </TextBox>
        <Button MouseEnter="DeleteButton_MouseEnter" Width="31" Height="31" MouseLeave="DeleteButton_MouseLeave" Name="deleteButton" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10,10">
            <Button.Content>
                <Image Source="/Resources/Icons/ICON_CANCEL.png" Width="27" Height="27"/>
            </Button.Content>
        </Button>
    </Grid>
</UserControl>
