<UserControl x:Class="BowieD.Unturned.NPCMaker.BetterControls.Universal_ItemList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BowieD.Unturned.NPCMaker.BetterControls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             Height="40" MinHeight="40" Width="250" MinWidth="196" VerticalAlignment="Top" Margin="5,5">
    <Grid>
        <Label Name="mainLabel" Margin="0,0,82,4" VerticalAlignment="Bottom" Height="32" VerticalContentAlignment="Center"/>
        <Button Click="EditButton_Click" Name="editButton" Width="31" HorizontalAlignment="Right" Height="31" Margin="0,4,46,4">
            <Button.Content>
                <iconPacks:PackIconMaterial Kind="Pencil" Foreground="{DynamicResource AccentColor}"/>
            </Button.Content>
        </Button>

        <Button Name="deleteButton" Width="31" Height="31" HorizontalAlignment="Right" Margin="0,4,10,4">
            <Button.Content>
                <iconPacks:PackIconMaterial Kind="Delete" Foreground="{DynamicResource AccentColor}"/>
            </Button.Content>
        </Button>
    </Grid>
</UserControl>
